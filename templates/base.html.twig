<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('icon/black-totoro.png') }}"/>
        {% block stylesheets %}{% endblock %}
    </head>
    <header>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper  blue-grey darken-3">
                    <a href="{{ path('accueil') }}" class="brand-logo center">MOVIETRACKER</a>
                    <ul class="left hide-on-med-and-down">
                        <li><a href="{{ path('accueil') }}">Accueil</a></li>
                        <li><a href="{{ path('movies') }}">Movies</a></li>
                    </ul>
                    <ul class="right hide-on-med-and-down">
                        {%if app.user is empty%}
                            <li><a href="{{ path('login') }}">Log In</a></li>
                            <li><a href="{{ path('addUser') }}">Sign In</a></li>
                        {% else %}
                            <li>
                                <a href="{{ path('user') }}">
                                   <!-- <img class="circle" width="40" height="40" src="{{ asset(app.user.profilImg) }}">-->
                                    {{ app.user.username }}
                                </a>
                            </li>
                            <li><a href="{{ path('logout') }}"><i class="material-icons">power_settings_new</i></a></li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <body>
        {% block body %}{% endblock %}


        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        {% endblock %}
    </body>
</html>
