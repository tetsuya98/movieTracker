{% extends 'base.html.twig' %}

{% block title %}
    {{ user.username }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ user.username }}</h1>
        <div class="row">
            <div class="col s6">
                <img class="circle" src="{{ asset(user.profilImg) }}" width="300" height="300">
                <a class="btn-floating btn-large waves-effect waves-light grey darken-3 tooltipped" data-tooltip="Edit Image" href="{{ path('editUserImg') }}"><i class="material-icons">edit</i></a>
            </div>
            <div class="col s6">
                <table>
                    <tbody>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Action</th>
                        <td>
                            <a class="btn-floating waves-effect waves-light blue-grey darken-3 tooltipped" href="{{ path('editUser') }}" data-tooltip="Edit">
                                <i class="material-icons">edit</i></a>
                            <a class="btn-floating waves-effect waves-light blue-grey darken-3 tooltipped" href="" data-tooltip="Edit Password">
                                <i class="material-icons">vpn_key</i></a>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <p>Vous Ãªtes membre depuis le {{ user.createDate|date('d-m-Y') }}.</p>
            </div>
        </div>
    </div>
    <script src="{{ asset('/js/jquery.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('.tooltipped').tooltip()
        });
    </script>
{% endblock %}